<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Adventure" parent="Theme.AppCompat.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/pokemon_blue</item>
        <item name="colorPrimaryDark">@color/pokemon_blue_dark</item>
        <item name="colorAccent">@color/pokemon_yellow</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:statusBarColor">@color/pokemon_blue_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Adventure" parent="Base.Theme.Adventure" />

    <!-- Custom Pokemon Title Style -->
    <style name="PokemonTitleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pokemon_blue_dark</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowColor">@color/pokemon_yellow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Pokemon Name Style -->
    <style name="PokemonNameStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pokemon_name_color</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Pokemon Details Style -->
    <style name="PokemonDetailsStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pokemon_details_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="PokemonButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Pokemon Card Style -->
    <style name="PokemonCardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>