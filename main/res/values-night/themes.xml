<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme for the application. -->
    <style name="Base.Theme.Adventure" parent="Theme.AppCompat.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/pokemon_purple_dark</item>
        <item name="colorPrimaryDark">@color/pokemon_purple_darker</item>
        <item name="colorAccent">@color/pokemon_gold</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/light_text</item>
        <item name="android:statusBarColor">@color/pokemon_purple_darker</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Adventure" parent="Base.Theme.Adventure" />

    <!-- Dark Mode Pokemon Title Style -->
    <style name="PokemonTitleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pokemon_gold</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:shadowColor">@color/pokemon_purple_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <!-- Dark Mode Pokemon Name Style -->
    <style name="PokemonNameStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pokemon_name_color</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Dark Mode Pokemon Details Style -->
    <style name="PokemonDetailsStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pokemon_details_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Dark Mode Button Style -->
    <style name="PokemonButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">12dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Dark Mode Pokemon Card Style -->
    <style name="PokemonCardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>