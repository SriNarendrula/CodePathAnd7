<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/PokemonCardStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="44dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/light_background">

            <ImageView
                android:id="@+id/itemPokemonImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Pokemon image"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemPokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PokemonNameStyle"/>

            <TextView
                android:id="@+id/itemPokemonDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                style="@style/PokemonDetailsStyle"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>