<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚡ Pokémon Collection ⚡"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        style="@style/PokemonTitleStyle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pokemonRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:contentDescription="List of Pokemon cards"
        android:clipToPadding="false"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/loadMoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load More Pokémon"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        style="@style/PokemonButtonStyle"/>

</LinearLayout>